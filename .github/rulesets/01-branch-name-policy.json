{
  "name": "branch-name-policy",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "~ALL"
      ],
      "exclude": []
    }
  },
  "bypass_actors": [],
  "rules": [
    {
      "type": "branch_name_pattern",
      "parameters": {
        "name": "Allowed branch names",
        "operator": "regex",
        "pattern": "^(main|release/\\d+\\.\\d+|(feature|fix|docs|chore)/[a-z0-9][a-z0-9._/-]*)$",
        "negate": false
      }
    }
  ]
}
